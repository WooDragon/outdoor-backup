#!/bin/sh /etc/rc.common
#
# OpenWrt SD Card Backup - Init Script
# Procd-style service management
#

START=99
STOP=10

USE_PROCD=1
PROG=/opt/outdoor-backup/scripts/backup-manager.sh

start_service() {
	# Create runtime directories
	mkdir -p /opt/outdoor-backup/var/lock
	mkdir -p /opt/outdoor-backup/log
	mkdir -p /mnt/ssd/SDMirrors/.logs

	# Set permissions
	chmod 755 /opt/outdoor-backup/scripts/*.sh
	chmod 755 /etc/hotplug.d/block/90-outdoor-backup

	logger -t outdoor-backup "Service enabled - SD cards will be backed up automatically"
}

stop_service() {
	# Kill any running backup processes
	pkill -f "backup-manager.sh" 2>/dev/null || true

	logger -t outdoor-backup "Service stopped"
}

reload_service() {
	# Reload configuration
	logger -t outdoor-backup "Configuration reloaded"
}

service_triggers() {
	# Reload on config changes
	procd_add_reload_trigger "outdoor-backup"
}
