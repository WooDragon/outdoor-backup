# UCI Configuration for SD Card Backup System
# This is a simpler alternative to /opt/outdoor-backup/conf/backup.conf
# Edit with: uci set outdoor-backup.config.backup_root='/your/path'
#            uci commit outdoor-backup

config outdoor-backup 'config'
	option enabled '1'
	option backup_root '/mnt/ssd/SDMirrors'
	option mount_point '/mnt/sdcard'
	option debug '0'
	option led_green '/sys/class/leds/green:lan'
	option led_red '/sys/class/leds/red:sys'
